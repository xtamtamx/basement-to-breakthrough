# Copy this file to .env.local for local development
# Environment variables for Basement to Breakthrough

# API Configuration (for future use)
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DEBUG_MODE=false

# Game Configuration
VITE_MAX_SAVE_SLOTS=10
VITE_AUTO_SAVE_INTERVAL=60000

# Audio Configuration
VITE_ENABLE_AUDIO=true
VITE_DEFAULT_MUSIC_VOLUME=0.3
VITE_DEFAULT_SFX_VOLUME=0.5

# Performance Configuration
VITE_TARGET_FPS=60
VITE_LOW_PERFORMANCE_MODE=false

# Build Configuration
VITE_BUILD_VERSION=0.0.0
VITE_BUILD_DATE=